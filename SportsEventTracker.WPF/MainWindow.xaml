
<Window x:Class="SportsEventTracker.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sports Event Tracker" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="LightGray">
    <DockPanel>
        <!-- Sidebar Navigation -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#2C3E50">
            <TextBlock Text="Main Menu" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="10"/>
            <Button Content="Manage Teams" 
                    Margin="10" 
                    Padding="10" 
                    FontSize="16" 
                    Background="#4CAF50" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Click="NavigateToTeams" />
            <Button Content="View Matches" 
                    Margin="10" 
                    Padding="10" 
                    FontSize="16" 
                    Background="#2196F3" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Click="NavigateToMatches" />
            <Button Content="Exit" 
                    Margin="10" 
                    Padding="10" 
                    FontSize="16" 
                    Background="#F44336" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Click="ExitApplication" />
        </StackPanel>

        <!-- Main Content Area -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
